<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/details_fragment_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/teal_200"
        android:elevation="@dimen/home_tool_bar_elevation"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:title="Details"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/goto_home_fragment_button"
        android:layout_width="wrap_content"
        android:paddingStart="@dimen/fragment_navigation_button_padding"
        android:paddingEnd="@dimen/fragment_navigation_button_padding"
        android:layout_height="@dimen/fragment_navigation_button_layout_height"
        android:layout_marginTop="@dimen/fragment_navigation_button_margin_top"
        android:text="@string/goto_home_fragment_string"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="@dimen/fragment_navigation_button_layout_constraintHorizontal_bias"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/details_fragment_tool_bar" />
</androidx.constraintlayout.widget.ConstraintLayout>