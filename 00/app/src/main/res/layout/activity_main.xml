<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/login_title_text_margin"
        android:text="@string/title"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="@dimen/login_title_text_size"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <EditText
        android:id="@+id/username_edit_text"
        android:layout_width="@dimen/login_input_width"
        android:layout_height="@dimen/login_input_height"
        android:layout_marginTop="@dimen/login_input_margin_top"
        android:background="@drawable/text_edit_border"
        android:textColor="@color/general_tint"
        android:textColorHint="@color/general_tint"
        android:paddingLeft="@dimen/login_input_padding"
        android:paddingRight="@dimen/login_input_padding"
        android:hint="@string/enter_username_text"
        android:textSize="@dimen/login_input_text_size"
        android:inputType="text"
        android:autofillHints=""
        android:importantForAutofill="no"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="@dimen/login_constraint_horizontal_bias"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_text_view" />
    <EditText
        android:id="@+id/password_edit_text"
        android:layout_width="@dimen/login_input_width"
        android:layout_height="@dimen/login_input_height"
        android:layout_marginTop="@dimen/login_input_password_margin_top"
        android:background="@drawable/text_edit_border"
        android:hint="@string/enter_password_text"
        android:paddingLeft="@dimen/login_input_padding"
        android:paddingRight="@dimen/login_input_padding"
        android:textColor="@color/general_tint"
        android:textColorHint="@color/general_tint"
        android:textSize="@dimen/login_input_text_size"
        android:inputType="textPassword"
        android:autofillHints=""
        android:importantForAutofill="no"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="@dimen/login_constraint_horizontal_bias"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/username_edit_text" />
    <Button
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/login_login_button_margin_bottom"
        android:width="@dimen/login_login_button_width"
        android:height="@dimen/login_login_button_height"
        android:background="@drawable/rounder_corner_rect"
        android:text="@string/contBtn"
        android:textColor="@color/white"
        android:textSize="@dimen/login_login_button_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="@dimen/login_constraint_horizontal_bias"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>